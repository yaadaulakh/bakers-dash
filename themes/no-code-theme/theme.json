{
	"version": 3,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"color": {
			"defaultPalette": false,
			"defaultGradients": false,
			"defaultDuotone": false,
			"custom": false,
			"customGradient": false,
			"customDuotone": false,
			"palette": [
				{
					"slug": "black",
					"color": "#1e1e1e",
					"name": "Base"
				},
				{
					"slug": "grey",
					"color": "#fff",
					"name": "other"
				},
				{
					"slug": "white",
					"color": "#f0f0f0",
					"name": "Contrast"
				},
				{
					"slug": "primary",
					"color": "#FFC85D",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#733E07",
					"name": "Secondary"
				}
				
			]
		},
		"layout": {
			"contentSize": "1440px",
			"wideSize": "1800px"
		},
		"spacing": {
			"units": [ "px", "em", "rem", "vh", "vw", "%" ]
		},
		"typography": {
			"fontFamilies": [
				{
					"name": "Ubuntu",
					"slug": "ubuntu",
					"fontFamily": "\"Ubuntu\", sans-serif"
				}
			],

			"fontSizes": 	[
					{ "name": "Small", "slug": "small", "size": "14px" },
					{ "name": "Medium", "slug": "medium", "size": "18px" },
					{ "name": "Large", "slug": "large", "size": "24px" }
			]
		}
	},
	"styles": {
    "blocks": {
      "core/paragraph": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)"
        }
      },
      "core/heading": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)",
          "fontWeight": "700"
        }
      },
      "core/list": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)"
        }
      },
      "core/quote": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)",
          "fontStyle": "italic"
        }
      },
      "core/pullquote": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)"
        },
        "border": {
          "width": "2px",
          "color": "var(--wp--preset--color--secondary)"
        }
      },
      "core/preformatted": {
        "typography": {
          "fontFamily": "Courier New, monospace",
          "fontSize": "var(--wp--preset--font-size--small)"
        }
      },
      "core/code": {
        "typography": {
          "fontFamily": "Courier New, monospace",
          "fontSize": "var(--wp--preset--font-size--small)"
        },
        "background": {
        }
      },
      "core/table": {
        "border": {
          "width": "1px",
          "color": "var(--wp--preset--color--secondary)"
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)"
        }
      },
      "core/verse": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontStyle": "italic"
        }
      }
    }
  },

	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	]
}

